<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/religionFormingReligion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25sp"
        android:layout_marginTop="25sp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Your builders have finished constructing their first temple.  You may now establish a religion, which your people will interpret and follow accordingly."
        android:textAppearance="@android:style/TextAppearance.Widget"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="46dp" />

    <Button
        android:id="@+id/religionSubmitButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameET"
        android:layout_centerHorizontal="false"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp"
        android:fontFamily="serif"
        android:text="Ok"
        android:textAppearance="@android:style/TextAppearance.Widget"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="214dp" />

    <EditText
        android:id="@+id/religionSubmissionET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newGameTV"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Name, Gods, Patron God?"
        android:inputType="textPersonName"
        android:textAppearance="@android:style/TextAppearance.Widget" />

    <RadioGroup
        android:id="@+id/religionChoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/religionChoiceOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:fontFamily="serif"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:text="Choice One"
            android:textAppearance="@android:style/TextAppearance.Widget"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/religionChoiceTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:text="Choice Two"
            android:textAppearance="@android:style/TextAppearance.Widget"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/religionChoiceThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:text="Choice Three"
            android:textAppearance="@android:style/TextAppearance.Widget"
            android:textSize="18sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/religionReligionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8sp"
        android:paddingTop="8sp"
        android:text="--  Your Religion --"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/religionNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center"
            android:paddingBottom="2.5sp"
            android:paddingLeft="6sp"
            android:paddingTop="2.5sp"
            android:text="Name:"
            android:textAppearance="@android:style/TextAppearance.Widget"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/religionOriginTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:paddingBottom="2.5sp"
        android:paddingLeft="6sp"
        android:paddingTop="2.5sp"
        android:text="Origin: "
        android:textAppearance="@android:style/TextAppearance.Widget"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/religionStructureTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:paddingBottom="2.5sp"
        android:paddingLeft="6sp"
        android:paddingTop="2.5sp"
        android:text="Structure: "
        android:textAppearance="@android:style/TextAppearance.Widget"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/religionValuesTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:paddingBottom="2.5sp"
        android:paddingLeft="6sp"
        android:paddingTop="2.5sp"
        android:text="Values:"
        android:textAppearance="@android:style/TextAppearance.Widget"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/religionInvolvementTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:paddingBottom="2.5sp"
        android:paddingLeft="6sp"
        android:paddingTop="2.5sp"
        android:text="Involvement"
        android:textAppearance="@android:style/TextAppearance.Widget"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/religionGodsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:paddingBottom="2.5sp"
        android:paddingLeft="6sp"
        android:paddingTop="2.5sp"
        android:text="God(s): "
        android:textAppearance="@android:style/TextAppearance.Widget"
        android:textSize="18sp" />

</LinearLayout>