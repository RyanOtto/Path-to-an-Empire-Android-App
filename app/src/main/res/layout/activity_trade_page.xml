<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tradeLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:gravity="center"
                android:text="--  Your Trading Post  --"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tradeResourcesTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:paddingBottom="2.5sp"
                    android:paddingLeft="6sp"
                    android:paddingTop="2.5sp"
                    android:text="Resources: #"
                    android:textAppearance="@android:style/TextAppearance.Holo.Widget"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tradeGoldTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:paddingBottom="2.5sp"
                    android:paddingLeft="6sp"
                    android:paddingTop="2.5sp"
                    android:text="Gold: #"
                    android:textAppearance="@android:style/TextAppearance.Holo.Widget"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tradeTradeMultTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:paddingBottom="2.5sp"
                android:paddingLeft="6sp"
                android:paddingTop="2.5sp"
                android:text="Trade Multiplier: #"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget"
                android:textSize="18sp" />

            <Button
                android:id="@+id/tradeCaravanButton"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:layout_weight="1"
                android:text="Organize Trade Caravan: +5*tradeMultG (Cost: 100R)" />

            <Button
                android:id="@+id/localGuildsButton"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sell To Local Guilds: +50*tradeMultG (Cost: 1,000R)" />

            <Button
                android:id="@+id/merchantShipButton"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Send Out Merchant Ship: +500*tradeMultG (Cost: 10.000R)" />

            <Button
                android:id="@+id/tradingPostButton"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Establish Trading Post: +5,000*tradeMultG (Cost: 100,000R)" />

            <Button
                android:id="@+id/mintGoldButton"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mint Gold Currency: +50,000*tradeMultG (Cost: 1,000,000R)" />

            <Button
                android:id="@+id/charterFairButton"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hold a Charter Fair: +500,000*tradeMultG (Cost: 10,000,000R)" />

            <TextView
                android:id="@+id/tradeUpgradeTV"
                android:layout_width="match_parent"
                android:layout_height="33sp"
                android:gravity="center"
                android:text="-- Trading Upgrades --"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Button" />

            <Button
                android:id="@+id/tradeUpgradeButton"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Increase Trade Tariffs: +15% Trade Multiplier (Cost: 5,000G)" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>